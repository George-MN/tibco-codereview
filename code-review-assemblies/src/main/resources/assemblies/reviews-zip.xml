<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>reviews</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${basedir}/${project.review.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/index.html</include>
				<include>**/menu.html</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>code-review-resources-*/**</include>
				</includes>
			</unpackOptions>
			<includes>
				<include>fr.fastconnect.factory.tibco.bw.codereview:code-review-resources:zip:display</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<!-- moduleSet for Code Reviews -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>*:bw-ear</include>
				<include>*:projlib</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>${basedir}/${project.review.directory}</directory>
						<outputDirectory>/</outputDirectory>
						<includes>
							<include>*.html</include>
							<include>*.xml</include>
							<include>*.svg</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

</assembly>