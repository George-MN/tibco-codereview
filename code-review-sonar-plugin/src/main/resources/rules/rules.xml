        <severity>MAJOR</severity>
    </rule>
    <rule>
        <key>REL-006</key>
        <name>No otherwise Transition</name>
        <description>When an activity has transitions with condition(s), the Otherwise transition is mandatory.</description>
        <severity>MAJOR</severity>
    </rule>
